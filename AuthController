package com.example.jwtmock.controller;

import com.example.jwtmock.service.JwtMockService;
import org.springframework.web.bind.annotation.*;

import java.util.Collections;
import java.util.Map;

@RestController
@RequestMapping("/auth")
public class AuthController {

    private final JwtMockService jwtMockService;

    // Constructor injection
    public AuthController(JwtMockService jwtMockService) {
        this.jwtMockService = jwtMockService;
    }

    @PostMapping("/mock-token")
    public Map<String, String> generateToken(@RequestBody(required = false) TokenRequest request) {
        String username = "GB-SVC-UKBEREV";

        if (request != null
                && request.input_token_state != null
                && request.input_token_state.username != null
                && !request.input_token_state.username.trim().isEmpty()) {
            username = request.input_token_state.username.trim();
        }

        String token = jwtMockService.generateToken(username);
        return Collections.singletonMap("issued_token", token);
    }
}
